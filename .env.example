# CodeGates Environment Configuration
# Copy this to .env and update with your values

# JIRA Integration (Optional)
JIRA_URL=https://your-company.atlassian.net
JIRA_USER=your-email@company.com
JIRA_TOKEN=your_jira_api_token_here
JIRA_SSL_VERIFY=true

# LLM Configuration - Choose your preferred provider
# Method 1: Set priority with CODEGATES_DEFAULT_LLM_PROVIDER
CODEGATES_DEFAULT_LLM_PROVIDER=openai

# OpenAI (Recommended)
OPENAI_API_KEY=sk-xxxxxxxxxxxx
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Claude (Alternative)
# ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxx
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Local Ollama (Free, Privacy-focused)
# OLLAMA_HOST=localhost:11434
# OLLAMA_MODEL=llama3.2:latest

# Enterprise LLM (Custom)
# ENTERPRISE_LLM_URL=https://your-enterprise-llm.com/v1
# ENTERPRISE_LLM_API_KEY=xxxxxxxxxxxx
# ENTERPRISE_LLM_MODEL=your-model

# Performance Configuration
CODEGATES_LLM_TIMEOUT=30
CODEGATES_LLM_MAX_RETRIES=3

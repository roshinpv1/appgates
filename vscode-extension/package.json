{
  "name": "codegates",
  "displayName": "CodeGates Hard Gate Assessment",
  "description": "Comprehensive validation of your repository against production-ready quality gates with enhanced pattern library, auto-scaling validation, Splunk integration, and elegant metric boxes",
  "version": "2.4.0",
  "publisher": "codegates",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/codegates"
  },
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=16.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "codegates",
    "hard gates",
    "quality gates",
    "production readiness",
    "code validation",
    "auto scaling",
    "kubernetes",
    "docker",
    "infrastructure validation",
    "metric boxes",
    "enhanced patterns"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codegates.assess",
        "title": "CodeGates: Assess Repository"
      },
      {
        "command": "codegates.configure",
        "title": "CodeGates: Configure Settings"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "codegates.configure"
        },
        {
          "command": "codegates.assess"
        }
      ]
    },
    "configuration": {
      "title": "CodeGates",
      "properties": {
        "codegates.apiUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "CodeGates API server URL"
        },
        "codegates.apiTimeout": {
          "type": "number",
          "default": 300,
          "description": "API request timeout in seconds (used for connection tests, scan requests, and polling)",
          "minimum": 30,
          "maximum": 3600
        },
        "codegates.apiRetries": {
          "type": "number",
          "default": 3,
          "description": "Number of API request retries",
          "minimum": 0,
          "maximum": 10
        },
        "codegates.enableEnhancedPatternLibrary": {
          "type": "boolean",
          "default": true,
          "description": "Enable enhanced pattern library for improved validation accuracy"
        },
        "codegates.enableAutoScalingValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-scaling validation for infrastructure assessment"
        },
        "codegates.enhancedEvaluationMode": {
          "type": "string",
          "enum": ["auto", "enhanced", "legacy"],
          "default": "auto",
          "description": "Evaluation mode for gate validation"
        },
        "codegates.includeInfrastructureValidation": {
          "type": "boolean",
          "default": true,
          "description": "Include infrastructure validation in assessment"
        },
        "codegates.enableMetricBoxes": {
          "type": "boolean",
          "default": true,
          "description": "Enable elegant metric boxes for better visualization"
        },
        "codegates.enableSplunkIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable Splunk integration for log analysis during assessment"
        },
        "codegates.splunkQueryTimeout": {
          "type": "number",
          "default": 300,
          "description": "Splunk query timeout in seconds",
          "minimum": 30,
          "maximum": 600
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "clean": "rm -rf out",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.19.0",
    "eslint": "^8.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "playwright": "^1.54.1"
  },
  "resolutions": {
    "minimatch": "^5.0.0",
    "glob": "^8.0.0",
    "brace-expansion": "^1.1.11"
  },
  "overrides": {
    "minimatch": "^5.0.0",
    "glob": "^8.0.0",
    "brace-expansion": "^1.1.11"
  }
}
